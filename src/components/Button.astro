---
interface Props {
  title: string;
  href: string;
}

const { href, title } = Astro.props;
---

<a href={href} class="link" target="_blank">
  <h2>
    {title}
    <slot />
  </h2>
  <style>
    .link {
      display: flex;
      justify-content: center;
      align-items: center;
      padding: 1rem 3rem;
      background-color: #0e1213;
      border-radius: 6px;
      transition: background-color 0.6s ease;
      color: #f0f3ff;
      opacity: 0.8;
      & > h2 {
        display: flex;
        align-items: center;
        gap: 1rem;
        justify-content: center;
        font-size: 2rem;
      }
      &:hover {
        outline: 1px solid #f0f3ff;
        box-shadow:
          4px 5px 2px rgba(255, 255, 255, 0.12),
          4px 3px 4px rgba(255, 255, 255, 0.42);
        background-color: #836fff;
        transition: background-color 0.6s ease;
      }
    }
  </style>
</a>
